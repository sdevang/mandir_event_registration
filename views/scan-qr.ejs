<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Code Scanner</title>
    <!-- Load the html5-qrcode library -->
    <script src="/scripts/html5-qrcode.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #reader {
            width: 100%;
            max-width: 500px;
            margin: 20px auto;
        }
        #qr-result {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Scan QR Code</h1>

        <!-- QR code scanner -->
        <div id="reader"></div>

        <!-- QR scan result -->
        <div id="qr-result" class="alert alert-info">Scanning for QR code...</div>

        <!-- Home and Scan Another QR Code Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a href="/main" class="btn btn-secondary">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/scan-qr-code" class="btn btn-primary">
                <i class="fas fa-qrcode"></i> Scan Another QR Code
            </a>
        </div>
    </div>

    <script>
        // Function to request camera permissions explicitly
        function requestCameraPermissionAndStartScanner() {
            navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
                .then(function(stream) {
                    // Permissions granted, start scanning the QR code
                    startQrCodeScanner();
                })
                .catch(function(err) {
                    console.error("Camera access denied or not available:", err);
                    alert("Unable to access the camera. Please grant permissions or check your device settings.");
                });
        }

        // Start the QR code scanner once permissions are granted
        function startQrCodeScanner() {
            const qrCodeReader = new Html5Qrcode("reader");

            qrCodeReader.start(
                { facingMode: "environment" }, // Use the back camera if available
                {
                    fps: 10, // Frames per second
                    qrbox: { width: 250, height: 250 } // Scanning box size
                },
                (decodedText, decodedResult) => {
                    console.log(`QR Code detected: ${decodedText}`);

                    // Assuming the QR code contains just the participant ID
                    const participantId = decodedText;

                    // Redirect to the /scan/{id} route with the scanned participant ID
                    window.location.href = `/scan/${participantId}`;
                },
                (errorMessage) => {
                    console.log(`Error scanning QR Code: ${errorMessage}`);
                }
            ).catch(err => {
                console.error("Unable to start QR Code scanning:", err);
                alert("Unable to start QR Code scanning. Please ensure camera access is granted.");
            });
        }

        // Automatically request camera permission and start the scanner on page load
        window.onload = function() {
            requestCameraPermissionAndStartScanner();
        };
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
