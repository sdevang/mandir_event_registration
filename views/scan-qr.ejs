<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QR Code Scanner</title>
  <!-- Load the html5-qrcode library -->
  <script src="/scripts/html5-qrcode.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    #reader {
      width: 300px;
      height: 300px;
      margin: 20px auto;
    }
    #scan-button {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      font-size: 16px;
    }
    #qr-result {
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h1 class="text-center mb-4">Scan QR Code</h1>

    <!-- QR code scanner -->
    <div id="reader"></div>
    <button id="scan-button" class="btn btn-primary" onclick="scanQRCode()">Scan QR Code</button>

    <!-- QR scan result -->
    <div id="qr-result"></div>
  </div>

  <script>
    function scanQRCode() {
      const qrCodeReader = new Html5Qrcode("reader");

      qrCodeReader.start(
        { facingMode: "environment" }, // Use the back camera if available
        {
          fps: 10, // Frame per second
          qrbox: { width: 250, height: 250 } // Scanning box size
        },
        (decodedText, decodedResult) => {
          console.log(`QR Code detected: ${decodedText}`);

          // Assuming the QR code contains just the participant ID
          const participantId = decodedText;

          // Redirect to the /scan/{id} route with the scanned participant ID
          window.location.href = `/scan/${participantId}`;
        },
        (errorMessage) => {
          console.log(`Error scanning QR Code: ${errorMessage}`);
        }
      ).catch(err => {
        console.error("Unable to start QR Code scanning:", err);
        alert("Unable to start QR Code scanning. Please ensure camera access is granted.");
      });
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
