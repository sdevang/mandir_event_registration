<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Event Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .table th, .table td {
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }
        .container-fluid {
            max-width: 100%;
        }
        .btn-group {
            margin-bottom: 15px;
        }
        h1 {
            font-size: 2.5rem;
            color: #343a40;
        }
        .table {
            border-collapse: separate;
            border-spacing: 0 10px;
        }
        .table th {
            background-color: #343a40;
            color: #ffffff;
        }
        .badge-success {
            background-color: #28a745;
        }
        .badge-danger {
            background-color: #dc3545;
        }
        .badge-warning {
            background-color: #ffc107;
        }
        .table-hover tbody tr:hover {
            background-color: #f1f3f5;
        }
        .btn-custom {
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
        }
        .search-input {
            max-width: 300px;
            margin: 0 auto 15px auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-3">
        <h1 class="text-center mb-4"><i class="fas fa-list-alt"></i> Event Participants and QR Code Management</h1>
        
        <!-- Button group for actions -->
        <div class="d-flex justify-content-between mb-3">
            <a href="/main" class="btn btn-primary btn-custom">
                <i class="fas fa-home"></i> Home
            </a>
            <div class="d-flex">
                <button class="btn btn-success btn-custom me-2" id="generate-all-qrs">
                    <i class="fas fa-qrcode"></i> Generate All QR Codes
                </button>
                <button class="btn btn-warning btn-custom" id="email-all-users">
                    <i class="fas fa-envelope"></i> Email All Users
                </button>
            </div>
        </div>

        <!-- Search input for filtering by First Name -->
        <div class="input-group mb-3 search-input">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
            <input type="text" id="searchBox" class="form-control" placeholder="Search by First Name">
        </div>

        <!-- Full-width responsive table -->
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile Number</th>
                    <th>Number of Tickets</th>
                    <th>Car Parking</th>
                    <th>Torch/Burn Ravan Effigy</th>
                    <th>Samosa</th>
                    <th>Dabeli</th>
                    <th>Vada-Idli Combo</th>
                    <th>Jalebi</th>
                    <th>Car Registration Number</th>
                    <th>Payable Total</th>
                    <th>Payable Status</th>
                    <th>QR Code</th>
                    <th>QR Code Emailed</th>
                    <th>Re-send QR Code</th>
                </tr>
            </thead>
            <tbody id="dataBody">
                <% data.forEach((row) => { %>
                    <tr>
                        <td><%= row.id %></td>
                        <td><%= row.email_address %></td>
                        <td><%= row.first_name %></td>
                        <td><%= row.last_name %></td>
                        <td><%= row.mobile_number %></td>
                        <td><%= row.number_of_tickets %></td>
                        <td><%= row.car_parking %></td>
                        <td><%= row.torch_burn_ravan_effigy %></td>
                        <td><%= row.samosa %></td>
                        <td><%= row.dabeli %></td>
                        <td><%= row.vada_idli_combo %></td>
                        <td><%= row.jalebi %></td>
                        <td><%= row.car_registration_number %></td>
                        <td><%= row.payable_total %></td>
                        <td>
                            <span class="badge <%= row.payable_status === 'Paid' ? 'badge-success' : 'badge-danger' %>">
                                <%= row.payable_status %>
                            </span>
                        </td>
                        <td>
                            <% if (row.qr_code_url) { %>
                                <img src="<%= row.qr_code_url %>" alt="QR Code" class="img-thumbnail img-fluid" width="100" height="100">
                            <% } else { %>
                                <button class="btn btn-primary btn-sm w-100" id="generate-qr-<%= row.id %>" onclick="generateQRCode(<%= row.id %>)">
                                    <i class="fas fa-qrcode"></i> Generate QR Code
                                </button>
                            <% } %>
                        </td>
                        <td>
                            <% if (row.qr_email_sent) { %>
                                <span class="badge bg-success"><i class="fas fa-envelope"></i> Sent</span>
                            <% } else if (row.qr_code_url) { %>
                                <button class="btn btn-warning btn-sm w-100" id="email-qr-<%= row.id %>" onclick="emailQRCode(<%= row.id %>)">
                                    <i class="fas fa-paper-plane"></i> Email QR Code
                                </button>
                            <% } else { %>
                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                    <i class="fas fa-envelope"></i> Email QR Code
                                </button>
                            <% } %>
                        </td>
                        <td>
                            <% if (row.qr_email_sent) { %>
                                <button class="btn btn-info btn-sm w-100" id="resend-qr-<%= row.id %>" onclick="resendQRCode(<%= row.id %>)">
                                    <i class="fas fa-sync-alt"></i> Re-send Email
                                </button>
                            <% } else { %>
                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                    <i class="fas fa-sync-alt"></i> Re-send Email
                                </button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Script to handle search filtering, QR code generation, email sending, and new buttons -->
    <script>
        // Search filter based on First Name
        document.getElementById('searchBox').addEventListener('input', function() {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#dataBody tr');

            rows.forEach(row => {
                const firstNameCell = row.querySelector('td:nth-child(3)');  // Get the 3rd column (First Name)
                if (firstNameCell) {
                    const firstName = firstNameCell.textContent.toLowerCase();
                    if (firstName.includes(searchValue)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        });

        // Function to generate QR code for a user
        function generateQRCode(participationId) {
            fetch(`/generate-qr/${participationId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.message === 'QR code generated successfully') {
                    alert('QR code generated successfully!');
                    location.reload();
                } else {
                    alert('Error generating QR code.');
                }
            })
            .catch(error => console.error('Error generating QR code:', error));
        }

        // Function to email QR code to a user
        function emailQRCode(id) {
            fetch(`/email-qr/${id}`, {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert(data.message);
                    console.log('Success:', data.message);
                } else {
                    alert('An unexpected error occurred.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error sending QR code email. Please try again.');
            });
        }

        // Function to resend QR code email
        function resendQRCode(id) {
            fetch(`/resend-qr/${id}`, {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                location.reload();
            })
            .catch(error => console.error('Error re-sending QR code:', error));
        }

        // Button to generate QR codes for all users
        document.getElementById('generate-all-qrs').addEventListener('click', function() {
            fetch('/generate-all-qrs', {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                location.reload();
            })
            .catch(error => {
                console.error('Error generating all QR codes:', error);
                alert('Error generating all QR codes.');
            });
        });

        // Button to email all users with QR codes
        document.getElementById('email-all-users').addEventListener('click', function() {
            fetch('/email-all-users', {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
            })
            .catch(error => {
                console.error('Error emailing all users:', error);
                alert('Error emailing all users.');
            });
        });
    </script>

    <!-- Bootstrap and FontAwesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
